<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.platzi.android.rickandmorty">

    <!--Permissions-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.platzi.android.rickandmorty.RickAndMortyPlatziApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.platzi.android.rickandmorty.ui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.platzi.android.rickandmorty.ui.CharacterDetailActivity"
            android:label="@string/title_character_detail_activity"
            android:parentActivityName="com.platzi.android.rickandmorty.ui.MainActivity" />
    </application>

</manifest>